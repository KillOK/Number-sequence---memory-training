<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sample_numbers_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorAccent"
        android:text="12345"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/points_count_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/answer_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/first_five_numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/first_five_numbers"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/last_five_numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/number_one_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_one"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="392dp" />

        <ImageButton
            android:id="@+id/number_two_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_two"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="425dp" />

        <ImageButton
            android:id="@+id/number_three_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_three"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="425dp" />

        <ImageButton
            android:id="@+id/number_four_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_four"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="348dp" />

        <ImageButton
            android:id="@+id/number_five_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_five"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="271dp" />

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_backspace"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="271dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/last_five_numbers"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/number_six_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_six" />

        <ImageButton
            android:id="@+id/number_seven_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_seven"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="348dp" />

        <ImageButton
            android:id="@+id/number_eight_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_eight"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="356dp" />

        <ImageButton
            android:id="@+id/number_nine_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_nine"
            tools:layout_editor_absoluteX="284dp"
            tools:layout_editor_absoluteY="356dp" />

        <ImageButton
            android:id="@+id/number_zero_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_zero"
            tools:layout_editor_absoluteX="320dp"
            tools:layout_editor_absoluteY="451dp" />

        <ImageButton
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorButtonBackground"
            app:srcCompat="@drawable/ic_confirm"
            tools:layout_editor_absoluteX="320dp"
            tools:layout_editor_absoluteY="451dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>